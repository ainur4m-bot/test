<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OplataActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/ic_darkscreen"/>

    <ImageView

        android:id="@+id/imageView25"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"

        android:layout_marginTop="21dp"
        android:background="@drawable/ic_black_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"
        android:id="@+id/textView36"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="24dp"

        android:text="Мой заказ"
        android:textColor="@color/ultra_black"

        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:background="@drawable/ic_new_white_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.85"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView19"
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"


        android:text="Оплата заказа"
        android:textColorHint="@color/ultra_black"

        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="47dp"

        android:layout_marginBottom="46dp"
        android:layout_height="47dp"

        android:layout_marginStart="33dp"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonOne"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Итоговая сумма"
        android:textColor="@color/gray_A1"
        android:textSize="12sp"
        android:layout_marginEnd="4dp"

        app:layout_constraintBottom_toTopOf="@+id/textView41"
        app:layout_constraintEnd_toStartOf="@+id/toConfirm"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/toConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"

        android:layout_marginBottom="32dp"
        android:background="@drawable/dark_button"

        android:clickable="true"

        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:id="@+id/textView41"
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat"

        android:text="300 ₽"
        android:textColorHint="@color/ultra_black"

        android:textSize="21sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toConfirm"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Оплатить\nсейчас"

        android:textColor="@color/white"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="@+id/toConfirm"
        app:layout_constraintEnd_toEndOf="@+id/toConfirm"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="@+id/toConfirm" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@drawable/ic_white_buy"
        app:layout_constraintBottom_toBottomOf="@+id/toConfirm"
        app:layout_constraintEnd_toEndOf="@+id/toConfirm"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/toConfirm"
        app:layout_constraintTop_toTopOf="@+id/toConfirm" />


    <ImageView
        android:id="@+id/buttonOne"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="19dp"

        android:clickable="true"
        android:focusable="true"

        android:background="@drawable/white_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonTwo"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/buttonTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintVertical_bias="0.6"

        android:clickable="true"
        android:focusable="true"

        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_buy"
        app:layout_constraintBottom_toBottomOf="@+id/imageView32"
        app:layout_constraintEnd_toEndOf="@+id/imageView32"
        app:layout_constraintStart_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toTopOf="@+id/imageView32" />

    <TextView
        android:id="@+id/textView44"
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="3dp"

        android:text="Алексей"
        android:textColorHint="@color/ultra_black"

        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView38"
        app:layout_constraintStart_toEndOf="@+id/imageView32" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="44dp"

        android:text="кофейня Coffee break\nг. Оренбург, ул. Чкалова 32"
        android:textColor="@color/ultra_black"

        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOne"
        app:layout_constraintStart_toEndOf="@+id/imageView32" />

    <TextView
        android:id="@+id/textView45"
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Оплата онлайн"
        android:textColorHint="@color/ultra_black"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        app:layout_constraintVertical_bias="0.4"

        app:layout_constraintBottom_toBottomOf="@+id/buttonOne"
        app:layout_constraintStart_toEndOf="@+id/imageView35"
        app:layout_constraintTop_toTopOf="@+id/buttonOne" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginStart="21dp"

        android:background="@drawable/ic_elipse"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOne"
        app:layout_constraintStart_toStartOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="@+id/buttonOne" />

    <ImageView
        android:id="@+id/dot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"

        android:background="@drawable/ic_dot"
        app:layout_constraintBottom_toBottomOf="@+id/imageView35"
        app:layout_constraintEnd_toEndOf="@+id/imageView35"
        app:layout_constraintStart_toStartOf="@+id/imageView35"
        app:layout_constraintTop_toTopOf="@+id/imageView35" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="18dp"
        android:text="СБП"

        android:textColor="@color/gray_A1"
        android:textSize="10sp"

        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOne"
        app:layout_constraintStart_toEndOf="@+id/imageView35"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_spb"
        android:layout_marginEnd="15dp"

        app:layout_constraintBottom_toBottomOf="@+id/buttonOne"
        app:layout_constraintEnd_toEndOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="@+id/buttonOne" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginStart="21dp"

        android:background="@drawable/ic_elipse"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"
        app:layout_constraintStart_toStartOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="@+id/buttonTwo" />

    <ImageView
        android:id="@+id/dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dot"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView37"
        app:layout_constraintEnd_toEndOf="@+id/imageView37"
        app:layout_constraintStart_toStartOf="@+id/imageView37"
        app:layout_constraintTop_toTopOf="@+id/imageView37" />

    <TextView
        android:id="@+id/textView46"
        style="@style/TextAppearance.Material3.DisplayLarge.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Банковская карта"
        android:textColorHint="@color/ultra_black"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"

        app:layout_constraintStart_toEndOf="@+id/imageView37"
        app:layout_constraintTop_toTopOf="@+id/buttonTwo"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="18dp"
        android:text="2540 xxxx xxxx 2648"

        android:textColor="@color/gray_A1"
        android:textSize="10sp"

        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"
        app:layout_constraintStart_toEndOf="@+id/imageView37"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_mir"
android:layout_marginEnd="7dp"

        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"
        app:layout_constraintEnd_toStartOf="@+id/imageView36"
        app:layout_constraintTop_toTopOf="@+id/buttonTwo"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:background="@drawable/ic_unionpay"
        app:layout_constraintVertical_bias="0.55"

        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"
        app:layout_constraintEnd_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="@+id/buttonTwo" />















</androidx.constraintlayout.widget.ConstraintLayout>